<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 状态栏 -->
    <color name="handyTitleBar_statusBarBackgroundColor">@color/google_lightbluea700</color>

    <!-- 顶部分割线 -->
    <dimen name="handyTitleBar_topLineHeight">@dimen/hdb_dp1</dimen>
    <color name="handyTitleBar_topLineColor">@color/google_grey500</color>

    <!-- 标题栏 -->
    <dimen name="handyTitleBar_titleBarHeight">@dimen/hdb_dp48</dimen>
    <color name="handyTitleBar_titleBarBackground">@color/google_lightbluea700</color>

    <!-- 标题栏文本 -->
    <dimen name="handyTitleBar_mainTextSize">@dimen/hdb_sp16</dimen>
    <color name="handyTitleBar_mainTextColor">@color/web_white</color>
    <color name="handyTitleBar_mainTextBackgroundColor">@color/web_transparent</color>
    <dimen name="handyTitleBar_subTextSize">@dimen/hdb_sp12</dimen>
    <color name="handyTitleBar_subTextColor">@color/web_white</color>
    <color name="handyTitleBar_subTextBackgroundColor">@color/web_transparent</color>

    <!-- 底部分割线 -->
    <dimen name="handyTitleBar_bottomLineHeight">@dimen/hdb_dp1</dimen>
    <color name="handyTitleBar_bottomLineColor">@color/google_grey500</color>

    <!-- 按钮 -->
    <dimen name="handyTitleBar_actionViewPadding">@dimen/hdb_dp4</dimen>
    <dimen name="handyTitleBar_actionSpacing">@dimen/hdb_dp4</dimen>
    <dimen name="handyTitleBar_actionTextSize">@dimen/hdb_sp12</dimen>
    <dimen name="handyTitleBar_actionImageSize">@dimen/hdb_dp16</dimen>
