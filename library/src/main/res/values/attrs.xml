<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HandyTitleBarStyleable">
        <attr name="handy_statusBarHeight" format="dimension" />
        <attr name="handy_statusBarBackgroundColor" format="color" />
        <attr name="handy_isShowCustomStatusBar" format="boolean" />

        <attr name="handy_topLineHeight" format="dimension" />
        <attr name="handy_topLineColor" format="color" />

        <attr name="handy_titleBarMargin" format="dimension" />
        <attr name="handy_titleBarMarginTop" format="dimension" />
        <attr name="handy_titleBarMarginLeft" format="dimension" />
        <attr name="handy_titleBarMarginRight" format="dimension" />
        <attr name="handy_titleBarMarginBottom" format="dimension" />
        <attr name="handy_titleBarHeight" format="dimension" />
        <attr name="handy_titleBarBackground" format="reference|color" />

        <attr name="handy_contentLayoutPadding" format="dimension" />
        <attr name="handy_contentLayoutOrientation">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="0" />
        </attr>
        <attr name="handy_mainText" format="string" />
        <attr name="handy_mainTextSize" format="dimension" />
        <attr name="handy_mainTextColor" format="color" />
        <attr name="handy_mainTextBackgroundColor" format="color" />
        <attr name="handy_subText" format="string" />
        <attr name="handy_subTextSize" format="dimension" />
        <attr name="handy_subTextColor" format="color" />
        <attr name="handy_subTextBackgroundColor" format="color" />

        <attr name="handy_bottomLineHeight" format="dimension" />
        <attr name="handy_bottomLineColor" format="color" />

        <attr name="handy_actionViewPadding" format="dimension" />
        <attr name="handy_actionSpacing" format="dimension" />
        <attr name="handy_actionTextSize" format="dimension" />
        <attr name="handy_actionTextColor" format="color" />
        <attr name="handy_actionImageSize" format="dimension" />
    </declare-styleable>
</resources>