        <attr name="statusBarHeight" format="dimension" />
        <attr name="statusBarBackgroundColor" format="color" />
        <attr name="isShowCustomStatusBar" format="boolean" />

        <attr name="topLineHeight" format="dimension" />
        <attr name="topLineColor" format="color" />

        <attr name="titleBarMargin" format="dimension" />
