        <attr name="titleBarMarginRight" format="dimension" />
        <attr name="titleBarMarginBottom" format="dimension" />
        <attr name="titleBarHeight" format="dimension" />
        <attr name="titleBarBackground" format="reference|color" />

        <attr name="mainText" format="string" />
